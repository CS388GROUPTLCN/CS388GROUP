<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/fancyTextView"
        android:layout_width="503dp"
        android:layout_height="68dp"
        android:layout_margin="8dp"
        android:background="@drawable/background_text_view"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:padding="16dp"
        android:shadowColor="#66000000"
        android:text="Test Your Mind"
        android:textAllCaps="true"
        android:textColor="#01383d"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ReflexGameStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/ReflexGameStart"
        android:layout_width="390dp"
        android:layout_height="129dp"
        android:layout_marginBottom="144dp"
        android:backgroundTint="#f5f5f5"
        android:shadowColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/SequenceGameStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SequenceGameStart"
        android:layout_width="158dp"
        android:layout_height="150dp"
        android:layout_marginBottom="52dp"
        android:text="Sequence"
        app:layout_constraintBottom_toTopOf="@+id/AimTrainerGameStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/AimTrainerGameStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="AimTrainerGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="98dp"
        android:layout_height="93dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="151dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</androidx.constraintlayout.widget.ConstraintLayout>